{
    "manifest_version": 3,
    "name": "Website Warning Popup",
    "version": "1.0",
    "description": "Displays a warning popup when navigating to sites listed in a remote source.",
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "alarms"      
    ],
    "host_permissions": [
        "https://raw.githubusercontent.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    }
}